pipeline {
    triggers {
  pollSCM('* * * * *')
    }
   agent any
    tools {
  maven 'M2_HOME'
}
    stages {

        stage(" build & SonarQube analysis") {
            
            agent any
        
            steps {
                dir('./fastfood_BackEnd/') {
                    withSonarQubeEnv('sonarQube') {
                   sh 'mvn verify org.sonarsource.scanner.maven:sonar-maven-plugin:sonar -Dsonar.projectKey=patangana_newfastfoodtests'
                        }
                }
            }
          }
    }
}