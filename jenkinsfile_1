pipeline {
    triggers {
  pollSCM('* * * * *')
    }
   agent any
    tools {
  maven 'M2_HOME'
}
    stages {

        stage(" build & SonarQube analysis") {
            
            agent any
        
            steps {
                dir('./fastfood_BackEnd/') {
                    withSonarQubeEnv('sonarqube') {
                   sh 'mvn clean package sonar:sonar'
                }
            }
          }
    }
}
}